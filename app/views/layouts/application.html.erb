<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand p-3" href="/">
            <span>LOGO</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if public_signed_in? %>
            <li>
              <%= link_to "マイページ",public_customers_show_path, class: 'nav-link text_light' %>
            </li>
            <li>
              <%= link_to "商品一覧",public_items_path, class: 'nav-link text-light' %>
            </li>
            <li>
              <%= link_to "カート",public_cart_itemes_index_path, class: 'nav-link text-light' %>
            </li>
            <li>
              <%= link_to "ログアウト",destroy_public_session_path, method: :delete, class: 'nav-link text-light' %>
            </li>
            <% elsif admin_signed_in? %>
            <li>
              <%= link_to "商品一覧",admins_items_path, class: 'nav-link text_light' %>
            </li>
            <li>
              <%= link_to "会員一覧", admins_customers_path, class: 'nav-link text_light' %>
            </li>
            <li>
              <%= link_to "注文履歴一覧", admins_orders_path, class: 'nav_link text_light' %>
            </li>
            <li>
              <%= link_to "ジャンル一覧", admins_genres_path, class: 'nav_link text_light' %>
            </li>
            <li>
              <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-light' do %>
                 ログアウト
              <% end %>
            </li>
            <% else %>
            <li>
              <%= link_to public_homes_about_path, class: 'nav-link text_light' do %>
                 About
              <% end %>
            </li>
            <li>
              <%= link_to public_items_path, class: 'nav-link text-light' do %>
                 商品一覧
              <% end %>
            </li>
            <li>
              <%= link_to new_public_registration_path, class: 'nav-link text_light' do %>
                 新規登録
              <% end %>
            </li>
            <li>
              <%= link_to new_public_session_path, class: 'nav-link text_light' do %>
                 ログイン
              <% end %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
    <%= yield %>
    </main>
    <footer>

    </footer>
  </body>

</html>