<div class="container">
  <h3>商品一覧</h3>
  <div class="row">
    <table calss="table table-hover table-inverse">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td style=text a:link{text-decoration:underline;}>
              <%= link_to admins_item_path(item.id), class: 'text_light' do %>
                <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <% if item.is_active %>
              <td style="color:green; font-weight:bold;">販売中</td>
            <% else %>
              <td style="color:gray; font-weight:bold;">販売停止中</td>
            <% end %>
          </tr>
        <% end %>
        </tbody>
      </table>
  </div>
</div>