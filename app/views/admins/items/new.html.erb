    <div class="container">
      <div class="row">
        <h2>商品新規登録</h2>
      </div>
      <%= form_with model: @item,url: admins_items_path,method: :post do |f| %>
        <div class="form-group">
          <label for="book_title">商品画像</label>
          <%= f.file_field :image_id %>
        </div>

        <div class="form-group">
          <label for="book_opinion">商品名</label>
          <%= f.text_field :name %>
        </div>

        <div class="form-group">
          <label for="book_opinion">商品説明</label>
          <%= f.text_area :introduction %>
        </div>

        <div class="form-group">
          <%= f.submit '新規登録', class:"btn btn-success" %>
        </div>
      <% end %>
    </div>