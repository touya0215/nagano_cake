    <div class="container">
      <div class="row">
        <h3 style="width: 20%;  text-align: center; background: #EEEEEE">商品新規登録</h3>
      </div>
      <div class="text-center">
      <%= form_with model: @item,url: admins_items_path,method: :post do |f| %>
        <div class="form-group">
          <label for="book_title">商品画像</label>
          <%= f.file_field :image, accept: "image/*" %>
        </div>

        <div class="form-group">
          <label for="book_opinion">商品名</label>
          <%= f.text_field :name %>
        </div>

        <div class="form-group">
          <label for="book_opinion">商品説明</label>
          <%= f.text_area :introduction %>
        </div>

        <div class="form-group">
          <label for="book_opinion">ジャンル</label>
          <%= f.select :genre_id, @genres.map{ |genre| [genre.name, genre.id] } %>
        </div>

        <div class="form-group">
          <label>税抜価格</label>
          <%= f.number_field :price %>
          <label>円</label>
        </div>

        <div class="form-group">
          <label>販売ステータス</label>
          <%= f.radio_button :is_active, true, :checked => "checked" %>
          <label>販売中</label>
          <%= f.radio_button :is_active, false %>
          <label>販売停止中</label>
        </div>

        <div class="form-group">
          <%= f.submit '新規登録', class:"btn btn-success" %>
        </div>
      <% end %>
      </div>
    </div>