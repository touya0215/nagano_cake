<div class="container">
  <h3 style="width: 11%;  text-align: center; margin-top: 15px; background: #EEEEEE">商品編集</h3>
</div>
<div class="container">
  <%= form_with model: @items,url: admins_item_path(@items.id), method: :patch do |f| %>
  <div class="form-group">
    <label for="book_title">商品画像</label>
    <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div class="form-group">
    <label for="book_opinion">商品名</label>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <label for="book_opinion">商品説明</label>
    <%= f.text_area :introduction %>
  </div>

  <div class="form-group">
    <label for="book_opinion">ジャンル</label>
    <%= f.select :genre_id, @genres.map{ |genre| [genre.name, genre.id] } %>
  </div>

  <div class="form-group">
    <label>税抜価格</label>
    <%= f.number_field :price %>
    <label>円</label>
  </div>

  <div class="form-group">
    <label>販売ステータス</label>
    <%= f.radio_button :is_active, true, :checked => "checked" %>
    <label>販売中</label>
    <%= f.radio_button :is_active, false %>
    <label>販売停止中</label>
  </div>

  <div class="form-group">
    <%= f.submit '変更を保存', class:"btn btn-success" %>
  </div>
  <% end %>
</div>