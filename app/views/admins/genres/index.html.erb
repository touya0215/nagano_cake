<%# ジャンル一覧＆追加画面%>
<div class="container">
    <P style="width: 20%;  text-align: center; background: #EEEEEE">ジャンル一覧・追加</P>
</div>
<div class="container">
    <div class="row">
        <%= form_with model: @genre,url: admins_genres_path,method: :post do |f| %>
            <div class="form-group">
              <a>ジャンル名</a>
              <%= f.text_field :name %>
              <%= f.submit '新規登録', class:"btn btn-success" %>
            </div>
        <% end %>
    </div>
    <div class="row">
        <table>
            <tr  style="margin: 15px;">
                <th style="background: #EEEEEE;">ジャンル</th>
            </tr>
            <% @genres.each do |genre| %>
                <tr>
                    <td>
                        <%= genre.name %>
                    </td>
                    <td>
                        <%= link_to "編集する", edit_admins_genre_path(genre.id), class:"btn btn-sm btn-success" %>
                    </td>
                </tr>
            <% end %>
        </table>
    </div>
</div>