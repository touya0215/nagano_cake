<div class="container">
  <h3 style="width: 11%; text-align: center; margin-top: 15px; background: #EEEEEE">会員一覧</h3>
  <div calss="row">
    <div calss="center-block">
      <div style="padding: 15px 150px;">
        <table class="table table-hover table-inverse ">
          <thead>
            <tr style="background: #EEEEEE">
              <th style="width: 20%;  border: 1px;">商品ID</th>
              <th style="width: 20%;  border: 1px;">氏名</th>
              <th style="width: 20%;  border: 1px;">メールアドレス</th>
              <th style="width: 20%;  border: 1px;">ステータス</th>
            </tr>
          </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td style=text a:link{text-decoration:underline;}>
              <%= link_to admins_customer_path(customer.id), class: 'text_light' do %>
                <%= customer.last_name %>
                <%= customer.first_name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <% if customer.is_deleted %>
              <td style="color:gray; font-weight:bold;">退会</td>
            <% else %>
              <td style="color:green; font-weight:bold;">有効</td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</div>