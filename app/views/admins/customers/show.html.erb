<div class="container">
  <h3 style="width: 35%; text-align: center; margin: 30px 15px; background: #EEEEEE">
    <%= @customers.last_name %><%= @customers.first_name %>さんの会員詳細
  </h3>
  <div class="row">
    <table>
      <div class="col-md-2">
        <div style="margin: 20px;">会員ID</div>
        <div style="margin: 20px;">名前</div>
        <div style="margin: 20px;">フリガナ</div>
        <div style="margin: 20px;">郵便番号</div>
        <div style="margin: 20px;">住所</div>
        <div style="margin: 20px;">電話番号</div>
        <div style="margin: 20px;">メールアドレス</div>
        <div style="margin: 20px;">会員ステータス</div>
      </div>

      <div class="col-md-5">
          <div style="margin-top: 20px;"><%= @customers.id %></div>
          <div style="margin-top: 20px;">
            <%= @customers.last_name %>
            <%= @customers.first_name %>
          </div>
          <div style="margin-top: 20px;">
            <%= @customers.last_name_kama %>
            <%= @customers.first_name_kana %>
          </div>
          <div style="margin-top: 20px;"><%= @customers.postal_code %></div>
          <div style="margin-top: 20px;"><%= @customers.address %></div>
          <div style="margin-top: 20px;"><%= @customers.telephone_number %></div>
          <div style="margin-top: 20px;"><%= @customers.email %></div>
          <% if @customers.is_deleted %>
            <div style="margin-top: 20px; color:gray; font-weight:bold;">退会</div>
          <% else %>
            <div style="margin: 20px 0px; color:green; font-weight:bold;">有効</div>
          <% end %>
          <div>
            <%= link_to "編集する", edit_admins_customer_path, class:"margin-top: 20px; btn btn-sm btn-success" %>
            <label>　　　</label>
            <%= link_to "注文履歴一覧を見る", admins_homes_top_path, class:"margin-top: 20px; btn btn-sm btn-primary" %>
          </div>
      </div>
    </table>
  </div>
</div>
