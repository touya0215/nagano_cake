<div class="container">
  <h3 style="width: 20%;  text-align: center; margin: 20px 30px; background: #EEEEEE">注文履歴一覧</h3>
  <div class="row" style="width: 100%; margin: 0px 10px;">
    <table border="1" style="width: 100%; margin: auto;">
      <tr style="margin: 30px 0px; background: #EEEEEE">
        <td style="padding: 10px 5px;">注文日</td>
        <td style="padding: 10px 5px;">配送先</td>
        <td style="padding: 10px 5px;">注文商品</td>
        <td style="padding: 10px 5px;">支払金額</td>
        <td style="padding: 10px 5px;">注文詳細</td>
      </tr>
      <% @order.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td>
          〒<%= order.postal_code %><br>
          <%= order.address %><br>
          <%= order.name %>
        </td>
        <td>
          <% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %><br>
          <% end %>
        </td>
        <td><%= order.total_payment.to_s(:delimited) %>円</td>
        <td class="text-center"><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>