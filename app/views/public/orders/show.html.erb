<div class="container">
  <h3 style="width: 20%;  text-align: center; margin: 20px 30px; background: #EEEEEE">注文履歴詳細</h3>
  <div class="row">
    <div class="col-md-6">
      <caption align="top"><b>注文情報</b></caption>
      <table border="1" class="col-md-12" style="margin: 20px 0px;">
        <tr>
          <td style="padding: 10px; background: #EEEEEE">注文日</td>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <td style="padding: 10px; background: #EEEEEE">配送先</td>
          <td>
            <%= @order.postal_code %><br>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <td style="padding: 10px; background: #EEEEEE">支払い方法</td>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-3">
      <caption align="top"><b>請求情報</b></caption>
      <table border="1" class="col-md-12" style="margin: 20px 10px">
        <tr>
          <td style="padding: 10px; background: #EEEEEE">商品合計</td>
          <td><%= @order.total_payment %></td>
        </tr>
        <tr>
          <td style="padding: 10px; background: #EEEEEE">配送先</td>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <td style="padding: 10px; background: #EEEEEE"><b>ご請求額</b></td>
          <td><%= @order.sum_total %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-7">
      <caption align="top"><b>注文内容</b></caption>
      <table border="1" class="col-md-12">
        <tr style="background: #EEEEEE">
          <td style="padding: 10px;" width="60%">商品</td>
          <td style="padding: 10px;">単価（税込）</td>
          <td style="padding: 10px;">個数</td>
          <td style="padding: 10px;">小計</td>
        </tr>
        <% @order_details.each do |f| %>
        <tr>
          <td style="padding: 10px;" width="60%"><%= f.item.name %></td>
          <td style="padding: 10px;"><%= f.item.add_tax_price.to_s(:delimited) %></td>
          <td style="padding: 10px;"><%= f.amount %></td>
          <td style="padding: 10px;"><%= f.sum_of_price.floor.to_s(:delimited) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>