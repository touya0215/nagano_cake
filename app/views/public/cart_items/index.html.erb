<h3 style="width: 25%; text-align: center; margin: 40px 60px; background: #EEEEEE">ショッピングカート</h3>
<dev class="container">
    <div class="row" style="margin: 0px 30px;">
        <table border="1" style="margin: auto;">
            <tr class="col-md-3" style="margin: 30px 0px; background: #EEEEEE">
                <td>商品名</td>
                <td>単価（税込み）</td>
                <td>数量</td>
                <td>小計</td>
                <td></td>
            </tr>
            <% @cart_items.each do |f| %>
                <tr>
                    <td>
                        <%= image_tag f.item.image, :size => '50x40' %>
                        <%= f.item.name %>
                    </td>
                    <td><%= f.item.add_tax_price.to_s(:delimited) %></td>
                    <td>
                        <%= form_with model: f, url:cart_item_path(f), method: :patch do |c| %>
                            <%= c.select :amount, (1..10).to_a,size: 3, class: 'form-control' , required: true %>
                            <%= c.submit '変更', class:"btn btn-sm btn-success" %>
                        <% end %>
                    </td>
                    <td><%= f.sum_of_price.floor.to_s(:delimited) %></td>
                    <td><%= link_to "削除する", cart_item_path(f.id), method: :delete, class:"btn btn-danger"  %></td>
                </tr>
            <% end %>
        </table>
    </div>
    <table border="1"  style="margin: 15px 550px;">
        <tr>
            <td style="background: #EEEEEE">合計金額</td>
            <td>
                <%= @total.round.to_s(:delimited) %>
            </td>
        </tr>
    </table>
    <div style="margin: 20px 550px;">
        <%= link_to "買い物を続ける", items_path, class:"margin: 20px; btn btn-sm btn-primary" %>
    </div>
</dev>
<div class="row">
    <table>
    <div class="text-center, col-md-2" style="margin: auto;">
        <%= link_to "情報入力に進む", new_oder_path, class:"padding: 20px; btn btn-sm btn-success" %>
    </div>
</table>
</div>