<div class="container">
  <h3 style="width: 20%; text-align: center; margin: 30px 50px; background: #EEEEEE">新規会員登録</h3>
  <div class="row">
    <table>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="col-md-300px">
          <div style="margin: 10px;">名前</div>
          <div style="margin: 10px;">フリガナ</div>
          <div style="margin: 10px;">メールアドレス</div>
          <div style="margin: 10px;">郵便番号(ハイフンなし)</div>
          <div style="margin: 10px;">住所</div>
          <div style="margin: 10px;">電話番号</div>
          <div style="margin: 10px;">パスワード(6文字以上)</div>
          <div style="margin: 10px;">パスワード(確認用)</div>
        </div>

        <div class="col-md-10">
          <div style="margin: 2px;">
            <label>(姓)　</label>
            <%= f.text_field :last_name, autofocus: true %>
            <label style="padding-left: 15px;">(名)　</label>
            <%= f.text_field :first_name, autofocus: true %>
          </div>

          <div style="margin: 2px;">
            <label>(セイ)</label>
            <%= f.text_field :last_name_kama, autofocus: true %>
            <label style="padding-left: 15px;">(メイ)</label>
            <%= f.text_field :first_name_kana, autofocus: true %>
          </div>

           <!--メールアドレス-->
          <div style="margin: 5px 48px;">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <!--郵便番号-->
          <div style="margin: 5px 48px;">
            <%= f.text_field :postal_code, autofocus: true %>
          </div>

          <!--住所-->
          <div style="margin: 5px 48px;">
            <%= f.text_field :address, autofocus: true, size: 55 %>
          </div>

          <!--電話番号-->
          <div style="margin: 5px 48px;">
            <%= f.text_field :telephone_number, autofocus: true %>
          </div>

          <!--パスワード-->
          <div style="margin: 5px 48px;">
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <!--確認用パスワード-->
          <div style="margin: 5px 48px;">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div style="margin: 20px 48px;">
            <%= f.submit "　　　新規登録　　　", class:"btn btn-success" %>
          </div>
        </div>
      <% end %>
    </table>
  </div>
  <h3 style="width: 23%; text-align: center; margin: 15px; background: #EEEEEE">既に登録済みの方</h3>
  <label style="margin: 1px 70px">
  <%= link_to "こちら", new_customer_session_path %>
  からログインしてください。
  </label>
</div>
